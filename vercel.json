{
    "version": 2,
    "builds": [
        {
            "src": "source/api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "source/public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/source/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/source/public/$1"
        }
    ]
}